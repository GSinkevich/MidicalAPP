<Window x:Class="Controll.Views.AddPersonPage" 
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controll.Views"
        mc:Ignorable="d"
        Title="AddPersonPage" Height="450" Width="450">
  

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Content="Введите имя" Height="30" />
        <Label Grid.Row="1" Content="Введите Фамилию" Height="30" />
        <Label Grid.Row="2" Content="Введите Дату Рождения" Height="30" />

        <TextBox x:Name="EnterFirstName" Grid.Column="1" Height="30" Margin="0 0 15 0"/>

        <TextBox x:Name="EnterLastName" Grid.Column="1" Grid.Row="1" Height="30" Margin="0 0 15 0" />
        <TextBox Grid.Column="1" Grid.Row="2" Height="30" Margin="0 0 15 0" />

        <Button Grid.Row="4" Margin="15 20 15 20" Content="Добавить" Click="Button_Click" />
    </Grid>
</Window>
